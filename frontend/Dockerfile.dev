# TaskFlow - Frontend Development Dockerfile
FROM node:25-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 5173

# Default command (will be overridden in docker-compose)
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]